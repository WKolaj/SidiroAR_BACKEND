{
  "filesDir": "files",
  "modelFileExtension": "smdl",
  "tokenHeader": "x-auth-token",
  "port": 5000,
  "projectDir": "project",
  "modelsDir": "models",
  "smtpServerURL": "pricelist.nazwa.pl",
  "smtpServerPort": 465,
  "useTLS": true,
  "useNodemailerPool": true,
  "requestTimeout": 600000,
  "logging": {
    "logActions": true,
    "info": {
      "path": "logs/info.log",
      "maxsize": 10485760,
      "maxFiles": 10
    },
    "warning": {
      "path": "logs/warn.log",
      "maxsize": 10485760,
      "maxFiles": 10
    },
    "error": {
      "path": "logs/error.log",
      "maxsize": 10485760,
      "maxFiles": 10
    }
  }
}
